. /lib/svc/share/smf_include.sh
. /lib/svc/share/fs_include.sh

FILELIST=/etc/svc/volatile/boot_archive_filelist
UPDATEFILE=/etc/svc/volatile/boot_archive_needs_update

smf_is_globalzone || exit $SMF_EXIT_OK

#
# If this system is booted from a ramdisk, there is no boot archive.
#
readmnttab / </etc/mnttab
if [ "$special" = '/devices/ramdisk:a' -o "$special" = '/ramdisk:a' ]; then
	exit $SMF_EXIT_OK
fi

#
# Now check the archive.
#
/sbin/bootadm update-archive -vnC 2> /dev/null
if [ $? = 0 ]; then
	exit $SMF_EXIT_OK
fi

touch $UPDATEFILE
exit $SMF_EXIT_OK
