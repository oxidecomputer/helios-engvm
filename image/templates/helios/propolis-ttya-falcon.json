{
    "pool": {
        "name": "rpool",
        "ashift": 9,
        "uefi": true,
        "size": 4300
    },

    "steps": [
        { "t": "create_be" },
        { "t": "create_dataset", "name": "home", "mountpoint": "/home" },

        { "t": "unpack_tar", "name": "helios-dev-falcon.tar.gz" },

        { "t": "ensure_file", "file": "/usr/bin/p9kp",
            "src": "p9kp",
            "owner": "root", "group": "root", "mode": "755" },

        { "t": "include", "name": "devfs" },

        { "t": "make_bootable" },

        { "t": "include", "name": "common" },

        { "t": "include", "name": "engvm" },

        { "t": "include", "name": "metadata" },

        { "t": "include", "name": "finalise" }
    ]
}
