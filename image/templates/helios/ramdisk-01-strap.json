{
    "dataset": {
        "name": "ramdisk${netdev?-netdev}",
        "output_snapshot": "strap"
    },

    "steps": [
        { "t": "pkg_image_create", "without": "netdev",
            "publisher": "helios-dev",
            "uri": "https://pkg.oxide.computer/helios-dev/" },

        { "t": "pkg_image_create", "with": "netdev",
            "publisher": "helios-netdev",
            "uri": "https://pkg.oxide.computer/helios-netdev/" },
        { "t": "pkg_set_publisher", "with": "netdev",
            "publisher": "helios-dev",
            "uri": "https://pkg.oxide.computer/helios-dev/" },

        { "t": "pkg_change_variant", "variant": "opensolaris.zone",
            "value": "global" },
        { "t": "pkg_change_variant", "variant": "opensolaris.imagetype",
            "value": "partial" },

        { "t": "pkg_change_facet", "facet": "openssl.10",
            "value": "false" },
        { "t": "pkg_change_facet", "facet": "doc",
            "value": "false" },
        { "t": "pkg_change_facet", "facet": "doc.man",
            "value": "false" },

        { "t": "pkg_install", "pkgs": [
            "/driver/i86pc/platform",
            "/system/boot/real-mode",
            "/developer/debug/mdb",
            "/system/kernel/dtrace/providers",
            "/system/network"
        ] }
    ]
}
