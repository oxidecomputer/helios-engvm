{
    "dataset": {
        "name": "ramdisk",
        "output_snapshot": "strap"
    },

    "steps": [
        { "t": "pkg_image_create",
            "publisher": "helios-dev",
            "uri": "https://pkg.oxide.computer/helios-dev/" },

        { "t": "pkg_change_variant", "variant": "opensolaris.zone",
            "value": "global" },

        { "t": "pkg_install", "pkgs": [
            "/driver/network/vioif",
            "/driver/storage/vioblk",
            "/driver/storage/nvme",
            "/driver/storage/ahci",
            "/driver/storage/ata",
            "/driver/i86pc/platform",
            "/system/boot/real-mode",
            "/developer/debug/mdb",
            "/system/network"
        ] }
    ]
}
