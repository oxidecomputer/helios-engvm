{
    "dataset": {
        "name": "base",
        "input_snapshot": "strap",
        "output_snapshot": "image"
    },

    "steps": [
        { "t": "include", "name": "software" },

        { "t": "pkg_set_publisher",
            "publisher": "helios-dev",
            "uri": "https://pkg.oxide.computer/helios-dev/" },

        { "t": "pkg_set_property",
            "name": "auto-be-name", "value": "helios-%r" },

        { "t": "pkg_set_property",
            "name": "ca-path", "value": "/etc/ssl/certs" },

        { "t": "pkg_purge_history" },

        { "t": "seed_smf" }
    ]
}
