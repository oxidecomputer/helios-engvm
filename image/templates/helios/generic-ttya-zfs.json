{
    "pool": {
        "name": "rpool",
        "bename": "ramdisk",
        "ashift": 9,
        "uefi": false,
        "size": 350,
        "label": false,
        "no_features": false,
        "compression": "gzip-9",
        "autoexpand": true
    },

    "steps": [
        { "t": "create_be" },

        { "t": "unpack_tar", "name": "${name}-ramdisk.tar.gz" },

        { "t": "include", "name": "devfs" },

        { "t": "include", "name": "common" },

        { "t": "ensure_file", "file": "/etc/auto_master",
            "src": "auto_master",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "ensure_file", "file": "/etc/ttydefs",
            "src": "ttydefs.115200",
            "owner": "root", "group": "sys", "mode": "644" },

        { "t": "ensure_file", "file": "/etc/default/init",
            "src": "default_init",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "ensure_file", "file": "/etc/inet/ntp.conf",
            "src": "ntp.conf",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "ensure_file", "file": "/usr/bin/install-helios",
            "src": "install-helios.sh",
            "owner": "root", "group": "bin", "mode": "0755" },
        { "t": "ensure_file", "file": "/usr/lib/bootparams",
            "src": "bootparams.sh",
            "owner": "root", "group": "bin", "mode": "0755" },

        { "t": "ensure_file", "with": "etherboot",
            "file": "/usr/lib/postboot",
            "src": "gimlet-postboot.sh",
            "owner": "root", "group": "bin", "mode": "0755" },
        { "t": "ensure_file", "with": "etherboot",
            "file": "/lib/svc/manifest/site/postboot.xml",
            "src": "gimlet-postboot.xml",
            "owner": "root", "group": "bin", "mode": "0644" },

        { "t": "ensure_file", "with": "etherboot",
            "file": "/var/svc/profile/site.xml",
            "src": "site-etherboot.xml",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "seed_smf", "with": "etherboot", "apply_site": true },
        { "t": "seed_smf", "without": "etherboot" }
    ]
}
