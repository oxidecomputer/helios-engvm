{
    "ufs": {
        "size": 520,
        "inode_density": 4096
    },

    "steps": [
        { "t": "unpack_tar", "name": "${name}-ramdisk.tar.gz" },

        { "t": "include", "name": "devfs" },

        { "t": "include", "name": "common" },

        { "t": "ensure_file", "file": "/etc/auto_master",
            "src": "auto_master",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "ensure_file", "file": "/etc/ttydefs",
            "src": "ttydefs.115200",
            "owner": "root", "group": "sys", "mode": "644" },

        { "t": "ensure_file", "file": "/etc/default/init",
            "src": "default_init",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "ensure_file", "file": "/etc/inet/ntp.conf",
            "src": "ntp.conf",
            "owner": "root", "group": "root", "mode": "644" },

        { "t": "ensure_file", "file": "/usr/bin/install-helios",
            "src": "install-helios.sh",
            "owner": "root", "group": "bin", "mode": "0755" },
        { "t": "ensure_file", "file": "/usr/lib/bootparams",
            "src": "bootparams.sh",
            "owner": "root", "group": "bin", "mode": "0755" },

        { "t": "ensure_file", "file": "/lib/svc/manifest/site/install.xml",
            "src": "install.xml",
            "owner": "root", "group": "root", "mode": "0644" },
        { "t": "ensure_file", "file": "/var/svc/profile/site.xml",
            "src": "site-install.xml",
            "owner": "root", "group": "root", "mode": "0644" },
        { "t": "ensure_file", "file": "/usr/lib/captive",
            "src": "install-captive.sh",
            "owner": "root", "group": "bin", "mode": "0755" },

        { "t": "seed_smf", "apply_profiles": [ "site", "platform" ] }
    ]
}
