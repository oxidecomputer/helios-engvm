{
    "dataset": {
        "name": "base${serdev?-serdev}${onu?-onu}",
        "output_snapshot": "strap"
    },

    "steps": [
        { "t": "pkg_image_create" },

        { "t": "pkg_set_publisher", "with": "serdev",
            "publisher": "helios-serdev",
            "uri": "https://pkg.oxide.computer/helios/2/serdev/" },

        { "t": "pkg_set_publisher",
            "publisher": "helios-dev",
            "uri": "https://pkg.oxide.computer/helios/2/dev/" },

        { "t": "pkg_change_variant", "variant": "opensolaris.zone",
            "value": "global" },

        { "t": "pkg_install", "include_optional": true, "pkgs": [
            "entire"
        ] },

        { "t": "pkg_uninstall", "pkgs": [
            "system/rsyslog"
        ] }
    ]
}
