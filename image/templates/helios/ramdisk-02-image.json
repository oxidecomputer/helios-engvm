{
    "dataset": {
        "name": "ramdisk${onu?-onu}${netdev?-netdev}${coffee?-coffee}",
        "input_snapshot": "strap",
        "output_snapshot": "image"
    },

    "steps": [
        { "t": "pkg_install", "without": "etherboot", "pkgs": [
            "/driver/network/afe",
            "/driver/network/amd8111s",
            "/driver/network/atge",
            "/driver/network/bfe",
            "/driver/network/bge",
            "/driver/network/bnx",
            "/driver/network/bnxe",
            "/driver/network/bpf",
            "/driver/network/chxge",
            "/driver/network/cxgbe",
            "/driver/network/dmfe",
            "/driver/network/e1000g",
            "/driver/network/emlxs",
            "/driver/network/ena",
            "/driver/network/eoib",
            "/driver/network/fcip",
            "/driver/network/fcsm",
            "/driver/network/hermon",
            "/driver/network/hme",
            "/driver/network/hxge",
            "/driver/network/i40e",
            "/driver/network/ibdma",
            "/driver/network/ibp",
            "/driver/network/igb",
            "/driver/network/ixgb",
            "/driver/network/ixgbe",
            "/driver/network/mlxcx",
            "/driver/network/mxfe",
            "/driver/network/myri10ge",
            "/driver/network/nge",
            "/driver/network/ntxn",
            "/driver/network/nxge",
            "/driver/network/platform",
            "/driver/network/qlc",
            "/driver/network/rds",
            "/driver/network/rdsv3",
            "/driver/network/rge",
            "/driver/network/rpcib",
            "/driver/network/rtls",
            "/driver/network/sdp",
            "/driver/network/sfe",
            "/driver/network/sfxge",
            "/driver/network/tavor",
            "/driver/network/usbecm",
            "/driver/network/vioif",
            "/driver/network/vmxnet3s",
            "/driver/network/vr",
            "/driver/network/xge",
            "/driver/network/yge",

            "/driver/storage/aac",
            "/driver/storage/adpu320",
            "/driver/storage/ahci",
            "/driver/storage/amr",
            "/driver/storage/arcmsr",
            "/driver/storage/ata",
            "/driver/storage/bcm_sata",
            "/driver/storage/cpqary3",
            "/driver/storage/glm",
            "/driver/storage/lsimega",
            "/driver/storage/marvell88sx",
            "/driver/storage/mega_sas",
            "/driver/storage/mpt_sas",
            "/driver/storage/mr_sas",
            "/driver/storage/nv_sata",
            "/driver/storage/nvme",
            "/driver/storage/pmcs",
            "/driver/storage/scsa1394",
            "/driver/storage/sdcard",
            "/driver/storage/ses",
            "/driver/storage/si3124",
            "/driver/storage/smp",
            "/driver/storage/vioblk"
        ] },

        { "t": "pkg_install", "with": "etherboot", "pkgs": [
            "/driver/network/cxgbe",
            "/driver/network/e1000g",
            "/driver/network/igb",
            "/driver/network/ixgbe",
            "/driver/network/rge",

            "/driver/storage/nvme"
        ] },

        { "t": "pkg_install", "pkgs": [
            "/system/library/gcc-runtime",
            "/system/library/g++-runtime",
            "/developer/linker",
            "/diagnostic/diskinfo",
            "/diagnostic/pci",
            "/system/data/hardware-registry",
            "/system/extended-system-utilities",
            "/web/curl",
            "/text/less",
            "/editor/vim",
            "/terminal/resize",
            "/system/data/urxvt-terminfo",
            "/network/netcat",
            "/network/rsync",
            "/network/ipfilter",
            "/compress/gzip",
            "/locale/en",
            "/system/network/routing",
            "/system/bhyve",
            "/system/library/bhyve"
        ] },

        { "t": "onu", "publisher": "helios-dev", "with": "onu",
            "repo": "file://${onu}" },

        { "t": "pkg_install", "with": "opte", "pkgs": [
            "/driver/network/opte"
        ] },

        { "t": "pkg_install", "with": "omicron1", "pkgs": [
            "/library/libxmlsec1",
            "/ooce/library/postgresql-13",
            "/system/zones/brand/omicron1"
        ] },

        { "t": "pkg_install", "with": "ssh", "pkgs": [
            "/network/openssh-server"
        ] },

        { "t": "ensure_file", "without": "etherboot",
            "file": "/etc/vfstab",
            "src": "ramdisk-vfstab",
            "owner": "root", "group": "sys", "mode": "0644" }
    ]
}
